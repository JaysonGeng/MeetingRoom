<div class="align-items-center pt-3 pb-2 mb-3">
    <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/event-types">Event Types</a></li>
        <li class="breadcrumb-item"><a href="">View</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{eventType.name}}</li>
    </ol>
    </nav>     
</div>

<div id="mainCard" class="card col-sm-6" style="margin: 0 auto" >
  <span data-feather="type" style="width: 150px; height: 150px; margin:10px auto"></span>
  <div class="card-body">
    <h5 class="card-title">{{eventType.name}}</h5>
    <p class="card-text">
    <form id="frmEdit" action="javascript:submitform()">
        <input type="hidden" name="id" value="{{eventType.id}}">
        <div class="form-group">
            <label for="formGroupExampleInput">Name</label>
            <input type="text" class="form-control" name="name" value="{{eventType.name}}">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput">Description</label>
            <input type="text" class="form-control" name="description" value="{{eventType.description}}">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>        
    </p>    
  </div>
</div>

<script>
function submitform()
{
    var frm = $('#frmEdit');
    var card = $('#mainCard');
    var formData = serializeObject(frm);

    showLoader();
    $.post('/event-types/edit',formData,
    function(data)
    {
        if(data.success === true)
        {
            window.location = '/event-types';
            return;
        }
        
        hideLoader();
        alert(data.message);
    },'JSON').fail(function(ex)
    {
        hideLoader();
        console.error(ex);
        alert('An error occurred on server, please try again later.')
    });
}
</script>